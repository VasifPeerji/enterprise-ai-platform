# ==========================================
# ENTERPRISE AI PLATFORM - ENVIRONMENT CONFIGURATION
# ==========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# ==========================================
# APPLICATION
# ==========================================
APP_NAME=enterprise-ai-platform
APP_VERSION=0.1.0
ENVIRONMENT=development  # development | staging | production
DEBUG=true
LOG_LEVEL=INFO  # DEBUG | INFO | WARNING | ERROR | CRITICAL

# ==========================================
# API SERVER
# ==========================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=true  # Only for development

# ==========================================
# SECURITY
# ==========================================
SECRET_KEY=your-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=30
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# ==========================================
# LAYER 0 - MODEL INFRASTRUCTURE
# ==========================================

# OpenAI
OPENAI_API_KEY=sk-your-openai-key

# Anthropic
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key

# Azure OpenAI (if using)
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_API_VERSION=2024-02-01

# LiteLLM Configuration
LITELLM_LOG_LEVEL=INFO
LITELLM_DROP_PARAMS=true  # Drop unsupported params
LITELLM_TELEMETRY=false

# Default Model Configuration
DEFAULT_TEXT_MODEL=gpt-4-turbo-preview
DEFAULT_VISION_MODEL=gpt-4-vision-preview
DEFAULT_EMBEDDING_MODEL=text-embedding-3-small

# Ollama (Local Models)
OLLAMA_BASE_URL=http://localhost:11434  # Default Ollama endpoint
OLLAMA_ENABLED=true  # Enable local models for cost savings

# ==========================================
# LAYER 1 - COGNITIVE (EMBEDDINGS & RAG)
# ==========================================

# Vector Database (Qdrant)
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=  # Optional, for Qdrant Cloud
QDRANT_COLLECTION_NAME=enterprise_knowledge

# Embedding Configuration
EMBEDDING_DIMENSION=1536  # For OpenAI text-embedding-3-small
EMBEDDING_BATCH_SIZE=100

# ==========================================
# DATABASE (PostgreSQL)
# ==========================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=enterprise_ai_platform
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-postgres-password

# SQLAlchemy
DATABASE_URL=postgresql+asyncpg://postgres:your-postgres-password@localhost:5432/enterprise_ai_platform
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10
DATABASE_ECHO=false  # Set to true for SQL debugging

# ==========================================
# CACHE & MEMORY (Redis)
# ==========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=  # Optional
REDIS_DB=0
REDIS_MAX_CONNECTIONS=50

# Session Configuration
SESSION_TTL_SECONDS=3600  # 1 hour
CONVERSATION_MEMORY_TTL_SECONDS=86400  # 24 hours

# ==========================================
# LAYER 5 - OBSERVABILITY
# ==========================================

# Arize Phoenix
PHOENIX_HOST=localhost
PHOENIX_PORT=6006
PHOENIX_COLLECTOR_ENDPOINT=http://localhost:6006/v1/traces

# Logging
LOG_FORMAT=json  # json | text
LOG_OUTPUT=stdout  # stdout | file
LOG_FILE_PATH=logs/app.log

# ==========================================
# LAYER 6 - AI OPS & EVALUATION
# ==========================================

# Testing & Evaluation
GOLDEN_DATASET_PATH=tests/golden_datasets
EVALUATION_MODEL=gpt-4-turbo-preview  # Model used for evaluation
HALLUCINATION_THRESHOLD=0.7

# ==========================================
# MULTI-TENANCY (LAYER 4)
# ==========================================
DEFAULT_TENANT_ID=default
TENANT_ISOLATION_ENABLED=true

# ==========================================
# RATE LIMITING
# ==========================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ==========================================
# FEATURE FLAGS
# ==========================================
ENABLE_WEB_SEARCH=false
ENABLE_CODE_EXECUTION=false
ENABLE_MULTIMODAL=true
ENABLE_STREAMING=true
ENABLE_HUMAN_IN_LOOP=true

# ==========================================
# COST MANAGEMENT
# ==========================================
MAX_TOKENS_PER_REQUEST=4000
MAX_COST_PER_REQUEST_USD=0.50
BUDGET_ALERT_THRESHOLD_USD=100.00

# ==========================================
# EXTERNAL SERVICES (Optional)
# ==========================================

# Email (for notifications)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=

# Slack (for alerts)
SLACK_WEBHOOK_URL=

# ==========================================
# DEVELOPMENT & DEBUGGING
# ==========================================
ENABLE_API_DOCS=true  # Swagger UI at /docs
ENABLE_PROFILING=false
ENABLE_QUERY_LOGGING=false
